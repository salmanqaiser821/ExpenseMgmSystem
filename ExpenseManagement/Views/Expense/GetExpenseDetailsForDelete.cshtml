@model ExpenseEntity

@{
    ViewData["Title"] = "Delete Expense";
}

<form method="post" asp-action="Delete">

    <div class="border p-1">

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Your Expense</h2>
        </div>
        <br />

        <!-- Include a hidden input field to pass the ExpenseId -->
        <input type="hidden" asp-for="ExpenseId" />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseDate"></label>
                <input asp-for="ExpenseDate" class="form-control" disabled />
            </div>
        </div>
        <br />

        <div class=row>
            <div class="col-4">
                <label asp-for="ExpenseCategoryId"></label>
                <select asp-for="ExpenseCategoryId" asp-items="@ViewBag.PopulateExpCategory" class="form-control" disabled>

                    <option selected>--Select Expense Category--</option>

                </select>
                <span asp-validation-for="ExpenseCategoryId" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseGivenTo"></label>
                <input asp-for="ExpenseGivenTo" class="form-control" disabled />
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseAmount"></label>
                <input asp-for="ExpenseAmount" class="form-control" disabled />
            </div>
        </div>
        <br />

        <div class="btn-group" role="group">
            <input type="submit" class="btn btn-primary mx-1" value="Delete?" />
            <a asp-action="Index" class="btn btn-danger mx-1">Back</a>
        </div>
    </div>

</form>

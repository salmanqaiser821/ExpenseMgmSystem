@model UserProfile

@{
    Layout = "_LayoutForUserProfile";
    ViewData["Title"] = "Registration";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-4"> 
            <form method="post" asp-action="Registration">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="EmailAddress"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />

                <div class="text-center">
                    <input type="submit" class="btn btn-primary mx-1" value="Save" />
                    <a asp-controller="UserProfile" asp-action="Login" class="btn btn-secondary mx-1">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
